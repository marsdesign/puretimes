function getQuantitySold($sku){
	$product = Mage::getResourceModel('reports/product_collection')
	->addOrderedQty()
	->addAttributeToFilter('sku', $sku)
	->setOrder('ordered_qty', 'desc')
	->getFirstItem();
	return ((int)$product->ordered_qty);
}

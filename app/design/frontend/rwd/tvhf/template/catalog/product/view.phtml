// function is also used by code in addtocart.phtml
function getVideoId($v){
    $v          = strip_tags($v);
    $parts      = parse_url($v);
    $path       = explode("/",$parts["path"]);
    $videoId   = array_pop($path); 
    return $videoId;  
}
// use this to output the sizing chart into a modal
